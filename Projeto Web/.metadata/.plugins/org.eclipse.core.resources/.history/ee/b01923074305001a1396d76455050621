package com.prf.inventario.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;

import com.prf.inventario.model.Usuario;
import com.prf.inventario.repository.LoginUsuarioRepository;

public class LoginUsuarioService {
	@Autowired
	private LoginUsuarioRepository loginUsuarioRepository;
	
	public Iterable<LoginUsuario> listarUsuarios() {
		return loginUsuarioRepository.findAll();
	}
	
	public Optional<LoginUsuario> buscarUsuario(int id) {
		return loginUsuarioRepository.findById(id);
	}
	
	public Usuario salvarUsuario(LoginUsuario loginUsuario) {
		return loginUsuarioRepository.save(usuario);
	}
	
	public void deletarUsuario (int id) {
		loginUsuarioRepository.deleteById(id);
	}
}
