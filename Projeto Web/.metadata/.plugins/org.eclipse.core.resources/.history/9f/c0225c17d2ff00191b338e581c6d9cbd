									<input type="text" name="idAmbiente"
										th:value="${ambiente.idAmbiente}" hidden />
									<button id="btnDelAmbiente" class="btn btn-sm btn-primary"
										>Delete</button>
								</form>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
